{
  "api_key": "",
  "exchanges": {
    "gdax": {
      "class": "io.flashbook.exchanges.GDAX"
    },
    "binance": {
      "class": "io.flashbook.exchanges.Binance"
    },
    "bitmex": {
      "class": "io.flashbook.exchanges.BitMEX"
    }
  },

  "data_sources": {
    "coinbase": {
      "class": "sources.CoinbaseMarketDataSource",
      "topics": {
        "btc_usd": {},
        "ltc_usd": {},
        "eth_usd": {},
        "eth_btc": {},
        "ltc_btc": {}
      },
      "data_types": {
        "book": {
          "retention": "30d"
        },
        "trades": {
          "retention": "90d"
        }
      }
    },

    "binance": {
      "class": "sources.BinanceMarketDataSource",
      "topics": {
        "btc_usdt": {},
        "ltc_usdt": {},
        "eth_usdt": {},
        "eth_btc": {},
        "ltc_btc": {},
        "ltc_eth": {}
      },
      "data_types": {
        "trades": {
          "retention": "90d"
        },
        "book_1000": {
          "retention": "90d"
        }
      }
    },

    "twitter": {
      "class": "sources.TwitterSearchDataSource",
      "topics": {
        "btc": {
          "search_terms": ["btc", "#btc", "bitcoin", "#bitcoin", "$btc"]
        },
        "eth": {
          "search_terms": ["eth", "#eth", "ether", "#ether", "ethereum", "#ethereum", "$eth"]
        },
        "ltc": {
          "search_terms": ["ltc", "#ltc", "litecoin", "#litecoin", "$ltc"]
        }
      },
      "data_types": {
        "tweets": {
          "retention": "90d"
        }
      }
    }
  },

  "strategies": {
    "dmac": "io.flashbook.strategies.DualMovingAverageCrossover",
    "signal": "io.flashbook.strategies.ExternalSignal",
    "latency_arb": "io.flashbook.strategies.LatencyArbitrage",
    "twitter_vol": "io.flashbook.strategies.TwitterVolumeTrader"
  },

  "currencies": {
    "usd": {
      "name": "US Dollars"
    },
    "btc": {
      "name": "Bitcoin"
    },
    "xbt": {
      "alias": "btc"
    },
    "eth": {
      "name": "Ethereum"
    },
    "ltc": {
      "name": "Litecoin"
    },
    "usdt": {
      "name": "Tether"
    }
  }
}